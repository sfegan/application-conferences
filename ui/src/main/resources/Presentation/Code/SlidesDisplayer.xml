  <content>{{velocity}}
#if ($type == 'edit')
  {{attachmentSelector className="Presentation.Code.PresentationClass" property="$name" filter="pdf,odp,ppt,pptx"/}}
#elseif (($type == 'view') &amp;&amp; ($!value!=''))
  #if($value.endsWith('.pdf'))
    #if($services.rendering.getMacroDescriptor($services.rendering.resolveMacroId('pdfviewer')))
      [[attach:$value]]
      
      {{pdfviewer file="$value" height=400/}}
    #elseif ($hasAdmin)
      [[$services.localization.render('presentation.sheet.slides.pdfViewerMissing')>>XWiki.XWikiPreferences||queryString="section=XWiki.Extensions&amp;search=pdfviewer"]]
      [[attach:$value]]
    #else
      [[attach:$value]]
    #end
  #else
  {{office attachment="$value"/}}
  #end
#elseif ($!value!='')
  [[attach:$value]]
#end
{{/velocity}}</content>
